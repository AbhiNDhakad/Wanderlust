<%- layout("/layouts/boilerplate") -%>

<style>
    .filters{
        display:flex;
        flex-wrap: wrap;
    }
    .taxes
    {
        display:flex;
        margin-top: 1rem;
        height: 3rem;
        border:1px solid black;
        padding:0.75rem;
        border-radius: 1rem;
        margin-bottom: 1rem;
    }
    .tax-info{
        display:none;
    }
    .filter{
        text-align: center;
        margin-left:3rem;
        margin-top: 20px;
        opacity: 0.8;
        margin-bottom: 2rem;
    }
    .filter:hover{
        opacity:1;
        cursor: pointer;
    }
    .filter p{
        font-size: 0.8rem;
    }
    
</style>

<div class="filters ">
    <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>trending</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Beachefront</p>
    </div>  
    <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castle</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-tree-city"></i>
       <p>Island</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Arctic Pools</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-landmark-dome"></i>
        <p>Domes</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-water"></i>
        <p>lakes</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-tower-observation"></i>
        <p>Tower</p>
    </div>
<!--     
    <div class="filter">
        <i class="fa-solid fa-sailboat"></i>
        <p>Boats</p>
    </div>
    
    <div class="filter">
        <i class="fa-regular fa-snowflake"></i>
        <p>Arctic</p>
    </div> -->
    <div class="taxes filters ms-auto">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
          </div>
    </div>
</div>
<body>

    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
        <% for(list of allListings){%>
        <a href="/listings/<%= list.id%>" class="listing-link">
            <div class="card listing-card " style="width:18rem padding:auto">     
                <img class="card-img-top" src="<%= list.image.url%>"style="height:18rem" alt="Card image cap">
                 <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                        <b><%= list.title%></b>
                    <br>
                    &#8377;<%= list.price.toLocaleString("en-IN") %>
                    <i class="tax-info">+18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <%}%>
</div>

<script>
    let taxes=document.getElementById("flexSwitchCheckDefault");
    taxes.addEventListener("click",()=>
    {
        let taxInfo=document.getElementsByClassName("tax-info");

        for( tax of taxInfo)
            {
                if(tax.style.display!="inline")
                    tax.style.display="inline";
                else
                    tax.style.display="none";
            }
        });
</script>
</body> 