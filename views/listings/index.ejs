<%- layout("/layouts/boilerplate") -%>
<body>
<div class="filters">
    <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>trending</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Beachefront</p>
    </div>  
    <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castle</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-tree-city"></i>
       <p>Island</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Arctic Pools</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-landmark-dome"></i>
        <p>Domes</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-water"></i>
        <p>lakes</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-tower-observation"></i>
        <p>Tower</p>
    </div>
<!--     
    <div class="filter">
        <i class="fa-solid fa-sailboat"></i>
        <p>Boats</p>
    </div>
    
    <div class="filter">
        <i class="fa-regular fa-snowflake"></i>
        <p>Arctic</p>
    </div> -->
    <div class="taxes filters ms-auto">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
          </div>
    </div>
</div>

    <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(list of allListings){%>
        <a href="/listings/<%= list.id%>" class="listing-link">
            <div class="card listing-card " >    
                <img class="card-img-top" src="<%= list.image.url%>"style="height:17rem" alt="Card image cap">
               <div class="explore-icon"> <i class="fa-solid fa-arrow-up-from-bracket"></i></div>
                 <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                        <b><%= list.title%></b>
                <br>
                    &#8377;<%= list.price.toLocaleString("en-IN")%>
                    <i class="tax-info">+18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <%}%>
</div>

<script>
    let taxes=document.getElementById("flexSwitchCheckDefault");
    taxes.addEventListener("click",()=>
    {
        let taxInfo=document.getElementsByClassName("tax-info");   
        for( tax of taxInfo)
            {
                if(tax.style.display!="inline")
                    tax.style.display="inline";
                else
                    tax.style.display="none";
            }
        });
</script>
</body> 